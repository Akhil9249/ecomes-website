		<script>

		
		var labelpass1 = document.getElementById("myLabelpass1");
        var labelpass2 = document.getElementById("myLabelpass2");
		var labelpass3 = document.getElementById("myLabelpass3");
		labelpass1.style.display = "none"; // Hide the label
        labelpass2.style.display = "none"; // Hide the label
		labelpass3.style.display = "none"; // Hide the label


		function toggleLabelpass1(event) {		
            
			var labelpass = document.getElementById("myLabelpass1");

			var passwordvalue = document.getElementById("singin-password-1");

			if(passwordvalue.value == ""){
					labelpass.style.display = "block"
				}

        }

        
		function toggleLabelpass2(event) {		
            
			var labelpass = document.getElementById("myLabelpass2");

			var passwordvalue = document.getElementById("singin-password-2");

			if(passwordvalue.value == ""){
					labelpass.style.display = "block"
				}

        }



		function toggleLabel2(event) {		

			var passwordvalue1 = document.getElementById("singin-password-1");
            var passwordvalue2 = document.getElementById("singin-password-2");

			if(passwordvalue1.value == "" || passwordvalue2.value == ""){

				if(passwordvalue1.value == ""){
					labelpass1.style.display = "block"
				}
                if(passwordvalue2.value == ""){
					labelpass2.style.display = "block"
				}

				return ;		
			}

			if(passwordvalue1.value != passwordvalue2.value){
				labelpass3.style.display = "block"

				return ;
			}
			

			
        }

		</script>

        
